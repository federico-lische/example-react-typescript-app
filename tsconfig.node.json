{
	// This is a TypeScript configuration file for a Node.js project.
	"compilerOptions": {
		// Specifies the location where TypeScript should store incremental compilation information.
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		
		// Sets the JavaScript language version for emitted JavaScript and includes compatible library declarations.
		"target": "ES2022",
		
		// Specifies the library files to be included in the compilation.
		"lib": ["ES2023"],
		
		// Specifies the module code generation method.
		"module": "ESNext",
		
		// Skip type checking of all declaration files.
		"skipLibCheck": true,

		/* Bundler mode */
		// Determines how modules are resolved.
		"moduleResolution": "Bundler",
		
		// Allows importing TypeScript files with explicit extensions.
		"allowImportingTsExtensions": true,
		
		// Ensures that each file is treated as a separate module.
		"isolatedModules": true,
		
		// Forces module detection to be strict.
		"moduleDetection": "force",
		
		// Disables emitting output files.
		"noEmit": true,
		
		// Enables interoperability between CommonJS and ES Modules.
		"esModuleInterop": true,

		/* Linting */
		// Enables all strict type-checking options.
		"strict": true,
		
		// Reports errors on unused local variables.
		"noUnusedLocals": true,
		
		// Reports errors on unused parameters.
		"noUnusedParameters": true,
		
		// Ensures that switch statements have a default case.
		"noFallthroughCasesInSwitch": true,
		
		// Reports errors on imports with side effects.
		"noUncheckedSideEffectImports": true
	},
	// Specifies the files to be included in the compilation.
	"include": ["vite.config.ts"]
}

