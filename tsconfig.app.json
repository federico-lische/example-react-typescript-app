{
	// This is the TypeScript configuration file for the example React TypeScript application.
	// It specifies various compiler options and settings to ensure the code is compiled correctly.

	"compilerOptions": {
		// Specifies the location where TypeScript should store incremental compilation information.
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		// Specifies the target ECMAScript version for the compiled JavaScript.
		"target": "ES2020",

		// Enables the use of the `define` property for class fields.
		"useDefineForClassFields": true,

		// Specifies the library files to be included in the compilation.
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		// Specifies the module code generation method.
		"module": "ESNext",

		// Skip type checking of declaration files.
		"skipLibCheck": true,

		/* Bundler mode */
		// Specifies the module resolution strategy.
		"moduleResolution": "Bundler",

		// Allows importing TypeScript files with extensions.
		"allowImportingTsExtensions": true,

		// Ensures that each file is treated as a separate module.
		"isolatedModules": true,

		// Forces module detection to be strict.
		"moduleDetection": "force",

		// Disables emitting output files.
		"noEmit": true,

		// Specifies the JSX code generation method.
		"jsx": "react-jsx",

		/* Linting */
		// Enables all strict type-checking options.
		"strict": true,

		// Reports errors on unused local variables.
		"noUnusedLocals": true,

		// Reports errors on unused parameters.
		"noUnusedParameters": true,

		// Ensures that switch statements have a default case.
		"noFallthroughCasesInSwitch": true,

		// Reports errors on unchecked side effect imports.
		"noUncheckedSideEffectImports": true,

		// Disallows implicit 'any' types.
		"noImplicitAny": true,

		// Disallows implicit 'this' types.
		"noImplicitThis": true,

		// Enables strict null checks.
		"strictNullChecks": true,

		// Allows default imports from modules with no default export.
		"allowSyntheticDefaultImports": true
	},

	// Specifies the files to be included in the compilation.
	"include": [
		"./src"
	],

	// Specifies the files to be excluded from the compilation.
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
